<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0069ea"
    tools:context=".Support">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="176dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="177dp"
                android:text="Version 1.0 - 2021"
                android:textColor="@color/white"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView" />

            <TextView
                android:id="@+id/support_textView_bantuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:text="Bantuan"
                android:textStyle="bold"
                android:textSize="28dp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="370dp"
                android:text="Informasi"
                android:textColor="@color/white"
                android:textSize="28dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="245dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="24dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/support_button_faq"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="18dp"
                    android:background="@drawable/support_shape"
                    android:text="                  FAQ"
                    android:textAlignment="textStart" />

                <Button
                    android:id="@+id/support_button_email"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginRight="18dp"
                    android:background="@drawable/support_shape"
                    android:text="                  Email"
                    android:textAlignment="textStart" />

                <ImageView
                    android:id="@+id/support_imageView_whatsapp"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="175dp"
                    app:srcCompat="@drawable/whatsaapp_blue" />

                <Button
                    android:id="@+id/support_button_whatsapp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="160dp"
                    android:layout_marginRight="18dp"
                    android:background="@drawable/support_shape"
                    android:text="                  WHATSAPP"
                    android:textAlignment="textStart" />

                <ImageView
                    android:id="@+id/support_imageView_email"
                    android:layout_width="50dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="109dp"
                    app:srcCompat="@drawable/email" />

                <ImageView
                    android:id="@+id/support_imageView_faq"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="37dp"
                    app:srcCompat="@drawable/faq" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="430dp"
                android:layout_marginEnd="24dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/support_button_privasi"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="18dp"
                    android:background="@drawable/support_shape"
                    android:text="                  Kebijakan Privasi"
                    android:textAlignment="textStart" />

                <Button
                    android:id="@+id/support_button_aboutus"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="95dp"
                    android:layout_marginRight="18dp"
                    android:background="@drawable/support_shape"
                    android:text="                  TENTANG KAMI"
                    android:textAlignment="textStart" />

                <ImageView
                    android:id="@+id/support_imageView_privasi"
                    android:layout_width="43dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="35dp"
                    app:srcCompat="@drawable/keyhole" />

                <ImageView
                    android:id="@+id/support_imageiView_aboutus"
                    android:layout_width="43dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="109dp"
                    app:srcCompat="@drawable/info" />
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>